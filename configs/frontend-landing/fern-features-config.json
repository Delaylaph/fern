{
    "features" : [
        {
            "name": "Auth",
            "actions": {
                
                "create": { 
                    "directories": [
                        "app/Http/Controllers",
                        "app/Models",
                        "database/migrations"
                    ],
                    "files": [
                        {
                            "name": "UserController.php",
                            "path": "app/Http/Controllers",
                            "content": "file content"
                        },
                        {
                            "name": "User.php",
